<%-include("../partials/header")%>
<%-include("../partials/navbar")%>
<div class="container mt-3">
   <%-include("../partials/flash")%> 
   <div class="row">
       <img id="img-show" src="<%=blog.image %> " alt="" width="200" height="300">
       <div class="d-flex justify-content-between">
       <h1 class="mt-5" style="font-family: Arial, Helvetica, sans-serif;">Blog: <%=blog.name%></h1>
       <div class="d-flex">
       <a href="/blogs/<%=blog._id%>/edit"><i class="fas fa-edit mt-5 fs-2"></i></a>
      <form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
        <button class="bg-transparent me-2 ms-4" style="border: none;"><i class="fas fa-trash-alt mt-5 fs-2"></i></button>
      </form>
      </div>
    </div>
       <hr>
       <h6>By : <%=blog.username%></h6>
       <p class="mt-3" id="showp" style="font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;"><%=blog.desc%></p>
   </div>

   <div class="row mt-3" style="font-family: 'Times New Roman', Times, serif;">
      <h2>Leave a Comment</h2>
      <hr>
      <form class="validated-form" action="/blogs/<%=blog._id%>/review" method="POST" novalidate>
         <div class="form-floating mb-3">
            <textarea style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;" class="form-control" placeholder="Leave a comment here" id="desc" name="comment" required></textarea>
            <label for="desc">&nbsp;&nbsp;&nbsp;Comments</label>
            <div class="valid-feedback">
               Looks good!
             </div>
          </div>
         <button type="submit" class="btn btn-success">Submit</button>
       </form>
       <br>
       <br>
       <div class="mb-3 mt-3">
         <%for(let review of blog.reviews){%>
             <div id="review" class="card mb-3">
                 <div class="card-header fs-4" style="background-color: rgba(0, 0, 255, 0.363);font-weight: 600;">
                   User
                 </div>
                 <div class="card-body">
                   <p  class="card-text fs-5"><%=review.comment%></p>
                 </div>
               </div>

         <%}%>
     </div>
    </div>
</div>

<%- include("../partials/footer")%>