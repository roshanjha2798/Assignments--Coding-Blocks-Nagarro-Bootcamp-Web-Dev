<%-include("../partials/header")%>
<%-include("../partials/navbar")%>
<div class="container">
  <%-include("../partials/flash")%>
    <%for(let blog of blogs){%>
        <div class="card mb-3 mt-5" style="max-width: 70rem;">
            <div class="row g-0">
              <div class="col-md-4">
                <img class="img" src="<%=blog.image%>" alt="...">
              </div>
              <div class="col-md-8">
                <div class="card-body text-start">
                  <h1 class="card-title text-uppercase" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif"><%=blog.name%></h1>
                  <hr>
                  <h6 class="card-title" >By- <%=blog.username%></h6>
                  <p class="card-text" style="font-family: Arial, Helvetica, sans-serif;"><%=blog.desc.substring(0,200)%>...</p>
                  <button type="button" class="btn btn-outline-primary"><a id="readmore" href="/blogs/<%=blog._id%>">Read More</a></button>
                </div>
              </div>
            </div>
          </div>
        <%}%>

</div>

<%- include("../partials/footer")%>
  
